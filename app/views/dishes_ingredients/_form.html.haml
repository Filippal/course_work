= form_for @dishes_ingredient do |f|
  - if @dishes_ingredient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dishes_ingredient.errors.count, "error")} prohibited this dishes_ingredient from being saved:"
      %ul
        - @dishes_ingredient.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :n_ingredients
    = f.text_field :n_ingredients

  .field
    = f.label :dish_id
    = f.select :dish_id, Dish.all.map{|x| [x.name, x.id]}

  .field
    = f.label :ingredient_id
    = f.select :ingredient_id, Ingredient.all.map{|x| [x.describe, x.id]}

  .actions
    = f.submit 'Save'
