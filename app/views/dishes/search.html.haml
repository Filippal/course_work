
=breadcrumb_tag do
  %li.active
    = t('app.dishes.search')
  %li
    = link_to 'Блюда', dishes_path
  %li
    Блюда

.page-header
%h3= t('.header_dish')

= form_tag search_dishes_path, method: 'get' do
  .form-actions
    = submit_tag nil, class: 'btn btn-primary'

  .form-wrapper
    .form-header
      = t('forms.dish.dish')
    .row.form-body
      .col-md-5
        = label_tag Dish.human_attribute_name("name")
        = text_field_tag 'search[dish][name]', nil, class: 'form-control'
      .col-md-2
        = label_tag Dish.human_attribute_name("instruction")
        = text_field_tag 'search[dish][instruction]', nil, class: 'form-control'
      .col-md-3
        = label_tag Dish.human_attribute_name("cooking_time")
        = number_field_tag 'search[dish][cooking_time]', nil, class: 'form-control'

