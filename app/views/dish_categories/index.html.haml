%h1= t('app.dish_categories.index')

%table.table.table-hover.table-striped.center
  %caption
    = link_to new_dish_category_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.dish_category')
  %thead
    %tr
      %th= DishCategory.human_attribute_name(:name)
      %th= DishCategory.human_attribute_name(:position)
      %th= DishCategory.human_attribute_name(:parent)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @dish_categories.each do |dish_category|
      %tr
        %td.center= dish_category.name
        %td.center= dish_category.position
        %td.center= dish_category.parent.try(:name)
        %td
          = link_to dish_category, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_dish_category_path(dish_category), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to dish_category, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
%br

= link_to 'New Dish category', new_dish_category_path
