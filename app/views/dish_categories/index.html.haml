=breadcrumb_tag do
  %li.active
    Категории блюд
  %li
    Поваренная книга

.page-header
  %h1= t('headers.dish_categories.index')
  
= link_to new_dish_category_path, class: 'btn btn-success' do
  = fa_icon :plus
  = t('buttons.new.dish_category')

.index_table
  .row
    .col-md-4.center= DishCategory.human_attribute_name(:name)
    .col-md-4.center= DishCategory.human_attribute_name(:position)
    .col-md-4.center= DishCategory.human_attribute_name(:parent)
  - @dish_categories.each do |dish_category|
    .row
      .col-md-4.center= dish_category.name
      .col-md-4.center= dish_category.position
      .col-md-4.center.bottom20= dish_category.parent ? dish_category.parent.name : "Не относится ни к какой"
      .col-md-12.center
        = link_to dish_category, class: 'btn btn-warning' do
          = fa_icon :eye
          = t('buttons.show')
        = link_to edit_dish_category_path(dish_category), class: 'btn btn-info' do
          = fa_icon :edit
          = t('buttons.edit')
        = link_to dish_category, :method => :delete,
        data: { confirm: t('buttons.confirm.dish_category') },
        class: 'btn btn-danger' do
          = fa_icon :times
          = t('buttons.destroy')
